{
  "manifest_version": 2,

  "name": "Are you sure?",
  "description": "Confirm before you visit certain websites",
  "version": "3.0",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "scripts": ["src/eventPage2.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "src/options2.html",
    "chrome_style": true
  },

  "permissions": ["<all_urls>", "webNavigation", "alarms", "tabs", "storage"],

  "web_accessible_resources": ["src/content2.css"]
}
